{
  "uid": "smart-retry-health",
  "title": "Smart Retry System Health",
  "tags": ["poker", "performance", "retry"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Retry Success Rate",
      "type": "graph",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(poker_retry_success_total[5m]) / (rate(poker_retry_success_total[5m]) + rate(poker_retry_exhausted_total[5m]))",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "percentunit", "max": 1, "min": 0},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "Lock Contention Rate",
      "type": "graph",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(poker_lock_contention_total[5m])",
          "legendFormat": "Contentions/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "ops"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Retry Attempts Distribution",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(poker_retry_attempts_bucket[5m]))",
          "legendFormat": "p95 attempts",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(poker_retry_attempts_bucket[5m]))",
          "legendFormat": "p50 attempts",
          "refId": "B"
        }
      ]
    }
  ]
}
