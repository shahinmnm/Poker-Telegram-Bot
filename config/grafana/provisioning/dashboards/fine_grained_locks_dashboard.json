{
  "uid": "poker-fine-grained-locks",
  "title": "Poker Bot - Fine-Grained Locking",
  "tags": ["poker", "locking", "phase4"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Lock Acquisition Latency",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, poker_lock_acquisition_duration_ms_bucket)",
          "legendFormat": "p99"
        },
        {
          "expr": "histogram_quantile(0.95, poker_lock_acquisition_duration_ms_bucket)",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, poker_lock_acquisition_duration_ms_bucket)",
          "legendFormat": "p50"
        }
      ]
    },
    {
      "id": 2,
      "title": "Lock Contention Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(poker_lock_retries_total[5m])",
          "legendFormat": "Retries/sec"
        }
      ]
    },
    {
      "id": 3,
      "title": "Action Processing Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(poker_action_processed_total[5m])",
          "legendFormat": "Actions/sec"
        }
      ]
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(poker_action_errors_total[5m])",
          "legendFormat": "Errors/sec"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {"params": [0.05], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"type": "avg"}
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "name": "High Error Rate Alert",
        "noDataState": "no_data",
        "notifications": [{"uid": "slack-alerts"}]
      }
    },
    {
      "id": 5,
      "title": "Concurrent Actions",
      "type": "graph",
      "targets": [
        {
          "expr": "poker_concurrent_actions",
          "legendFormat": "{{chat_id}}"
        }
      ]
    },
    {
      "id": 6,
      "title": "Lock Hierarchy Violations",
      "type": "stat",
      "targets": [
        {
          "expr": "increase(poker_lock_hierarchy_violations_total[1h])",
          "legendFormat": "Violations"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    }
  ],
  "refresh": "10s",
  "time": {"from": "now-1h", "to": "now"}
}
