{
  "uid": "poker-smart-retry",
  "title": "Poker Bot - Smart Retry Mechanism",
  "tags": ["poker", "retry", "phase5"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Retry Distribution by Attempt",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (attempt) (rate(poker_retry_attempts_total[5m]))",
          "legendFormat": "Attempt {{attempt}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Retry Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "(sum(rate(poker_retry_success_total[5m])) / sum(rate(poker_retry_attempts_total[5m]))) * 100",
          "legendFormat": "Success %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Backoff Duration (ms)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, poker_retry_backoff_duration_ms_bucket)",
          "legendFormat": "p99"
        },
        {
          "expr": "histogram_quantile(0.50, poker_retry_backoff_duration_ms_bucket)",
          "legendFormat": "p50"
        }
      ]
    },
    {
      "id": 4,
      "title": "Circuit Breaker State",
      "type": "stat",
      "targets": [
        {
          "expr": "poker_circuit_breaker_state",
          "legendFormat": "{{state}}"
        }
      ],
      "valueMaps": [
        {"value": "0", "text": "Closed"},
        {"value": "1", "text": "Open"},
        {"value": "2", "text": "Half-Open"}
      ]
    }
  ],
  "refresh": "10s",
  "time": {"from": "now-1h", "to": "now"}
}
