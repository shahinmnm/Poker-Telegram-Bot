{
  "uid": "fine-grained-locks",
  "title": "Fine-Grained Lock Performance",
  "tags": ["poker", "performance", "locks"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Rollout Percentage",
      "type": "gauge",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
      "targets": [
        {
          "expr": "poker_fine_grained_locks_rollout_percentage",
          "legendFormat": "Rollout %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Action Duration (p95)",
      "type": "graph",
      "gridPos": {"x": 8, "y": 0, "w": 16, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(poker_action_duration_seconds_bucket[5m]))",
          "legendFormat": "Fine-Grained Locks",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(poker_action_duration_seconds_bucket{legacy=\"true\"}[5m]))",
          "legendFormat": "Legacy Locks",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Duration"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Lock Wait Time",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(poker_lock_wait_time_seconds_sum[5m]) / rate(poker_lock_wait_time_seconds_count[5m])",
          "legendFormat": "{{lock_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(poker_action_errors_total[5m])",
          "legendFormat": "Errors/sec",
          "refId": "A"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {"params": [0.05], "type": "gt"},
            "operator": {"type": "and"},
            "query": {"params": ["A", "5m", "now"]},
            "reducer": {"type": "avg"}
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "name": "High Error Rate Alert",
        "noDataState": "no_data",
        "notifications": []
      }
    }
  ]
}
